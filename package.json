{
  "name": "linked-data-store-client",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/statisticsnorway/linked-data-store-client"
  },
  "author": "Statistics Norway",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "dependencies": {
    "ace-builds": "^1.4.12",
    "chart.js": "^2.7.3",
    "date-fns": "^2.0.0-alpha.27",
    "react": "^16.7.0",
    "react-ace": "^9.1.3",
    "react-chartjs-2": "^2.7.4",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.7.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.4.0",
    "react-table-6": "^6.11.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^1.2.1",
    "uuid": "^8.3.0"
  },
  "scripts": {
    "prestart": "react-env --dest ./public",
    "start": "react-scripts start",
    "build": "react-scripts build && react-env --dest ./build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "coverage": "react-scripts test --env=jest-environment-jsdom-sixteen --coverage --watchAll=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@beam-australia/react-env": "^2.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.3",
    "jest-environment-jsdom-sixteen": "^1.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/index.js",
      "!src/**/index.js",
      "!src/enum/**",
      "!src/__tests__/test-data/**",
      "!src/utilities/fetch/Fetch.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text"
    ]
  }
}
